{
  "dependencies": {
    "hdr-canvas": "git+https://github.com/cmahnke/hdr-canvas.git"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.27.3",
    "rollup-plugin-dts": "^6.1.1"
  },
  "scripts": {
    "preinstall": "npm i",
    "generate-hdr-canvas": "cd node_modules/hdr-canvas && npm run update-types",
    "package-hdr-canvas": "cd node_modules/hdr-canvas && npm i && rollup --config",
    "postinstall": "npm run generate-hdr-canvas && npm run package-hdr-canvas",
    "build": "esbuild --bundle import.ts"
  }
}
