{
  "name": "hdr-canvas",
  "version": "0.1.0",
  "description": "HDR capable HTML canvas",
  "main": "dist/hdr-canvas.cjs",
  "module": "dist/hdr-canvas.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/hdr-canvas.js",
      "default": "./dist/hdr-canvas.js"
    },
    "./three/*": "./three/*"
  },
  "files": [
    "dist/hdr-canvas.d.ts",
    "dist/hdr-canvas.js",
    "dist/hdr-canvas.js.map",
    "dist/hdr-canvas.min.js",
    "dist/hdr-canvas.min.js.map",
    "dist/hdr-canvas.umd.js",
    "dist/hdr-canvas.umd.js.map",
    "dist/index.d.ts",
    "dist/@types",
    "three",
    "src",
    "scripts",
    "patches",
    "rollup.config.mjs",
    "tsconfig.json",
    "README",
    "LICENCE"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm run eslint && npm run stylelint",
    "eslint": "eslint . -c eslint.config.mjs --report-unused-disable-directives",
    "stylelint": "stylelint -c tests/site/stylelint.config.js 'tests/**/*.scss'",
    "knip": "knip",
    "tsc": "tsc",
    "build": "rimraf ./dist ./build && tsc && rollup --config",
    "dev": "npm run jsdoc && vite -c tests/site/vite.config.js",
    "site": "npm run jsdoc && vite -c tests/site/vite.config.js build",
    "clean": "rimraf ./dist ./build",
    "format": "prettier . --check",
    "jsdoc": "jsdoc -c jsdoc.config.json -r .",
    "ts-prepare-generate": "patch-package && node scripts/git-submodules.js -v -f -d node_modules/@typescript/dom-lib-generator/",
    "ts-generate": "cd node_modules/@typescript/dom-lib-generator && npm i && npm run build",
    "ts-post-generate": "rimraf node_modules/@typescript/dom-lib-generator/generated/ts5.*",
    "update-types": "npm run ts-prepare-generate && npm run ts-generate && npm run ts-post-generate",
    "_postinstall": "npm run update-types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cmahnke/hdr-canvas.git"
  },
  "keywords": [
    "HDR",
    "canvas",
    "3D",
    "Three.js"
  ],
  "author": "Christian Mahnke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cmahnke/hdr-canvas/issues"
  },
  "homepage": "https://github.com/cmahnke/hdr-canvas#readme",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@eslint/markdown": "^7.3.0",
    "@fontsource-utils/scss": "^0.2.2",
    "@fontsource-variable/league-spartan": "^5.2.8",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/three": "^0.180.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@typescript/dom-lib-generator": "github:microsoft/TypeScript-DOM-lib-generator",
    "@typescript/lib-dom": "npm:@types/web@^0.0.273",
    "better-docs": "^2.7.3",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "isomorphic-git": "^1.34.0",
    "jsdoc": "^4.0.4",
    "knip": "^5.64.1",
    "patch-package": "^8.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.4",
    "rollup-plugin-dts": "^6.2.3",
    "sass": "^1.93.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "three": "^0.180.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.9",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "colorjs.io": "^0.5.2"
  }
}
